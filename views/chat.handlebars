<head>
    <title>Socket.IO chat</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font: 13px Helvetica, Arial;
        }

        form {
            background: #000;
            padding: 3px;
            position: fixed;
            bottom: 0;
            width: 100%;
        }

        form input {
            border: 0;
            padding: 10px;
            width: 90%;
            margin-right: .5%;
        }

        form button {
            width: 9%;
            background: rgb(130, 224, 255);
            border: none;
            padding: 10px;
        }

        #messages {
            list-style-type: none;
            margin: 0;
            padding: 0;
        }

        #messages li {
            padding: 5px 10px;
        }

        #messages li:nth-child(odd) {
            background: #eee;
        }
    </style>

    <ul class="pages">
        <li class="login page">
            <div class="form">
                <h3 class="title">Whats your nickname?</h3>
                <input class="usernameInput" type="text" maxlength="14" />
            </div>
        </li>
    </ul>

    {{!-- <ul id="from"></ul> --}}
    <ul id="messages"></ul>
    <form action="">
        {{!-- <label for="">from:</label><input id="m" autocomplete="off" /> --}}
        <input class="inputMessage" id="m" autocomplete="off" placeholder="Type here..." /><button>Send</button>
    </form>
</head>